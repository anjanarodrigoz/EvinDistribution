<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="10dp"
    android:elevation="20dp"
    app:cardBackgroundColor="@color/white2"
    app:cardCornerRadius="10dp"
   >



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/sItemPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="Item Price"
                android:textColor="@color/teal_700"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
            />

            <TextView
                android:id="@+id/sItemName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/sItemPrice"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:text="ITEM NAME"
                android:textColor="@color/teal_700"
                android:textSize="15sp"
                android:layout_marginBottom="10dp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/sItemTotalCost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/sItemName"
                android:layout_marginStart="20dp"
                android:text="ITEM COST"
                android:textColor="@color/blue1"
                android:textSize="15sp"
                android:layout_marginBottom="10dp"
                android:textStyle="bold"
                android:visibility="gone"
                />

            <TextView
                android:id="@+id/lstock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="10dp"
                android:text="Stock"
                android:textAlignment="textEnd"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:textColor="@color/teal_700"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/sStock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lstock"
                android:layout_alignEnd="@+id/lstock"
                android:textAlignment="textEnd"
                android:text="name"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />


        </RelativeLayout>





</androidx.cardview.widget.CardView>